<h1> <%= @user.firstname %> 's Profile </h1>


<% if @user.profile_pic? %>
  <%= image_tag @user.profile_pic.url, class:"thumbnail-image" %>
<% else %>
  <%= image_tag("profile-pic-blank.jpg", class:"thumbnail-image") %>
<% end %>
<% if current_user?(@user) %>
  <%= link_to "change profile pic", edit_user_registration_url %>
  <% else %>
    <% friendship = @user.friendships.where("friend_id", current_user.id, "accepted", false) %>
    <% if  current_user.friends.include? @user%>
      <p> friends </p>
      <%= link_to "Remove Friend", friendship_url(id: friendship.ids), method: :delete %>
    <% elsif !current_user.requested_friendships.where(id: @user.id).empty? %>
      <p> they have sent you a request <p>
      <%=  link_to "Accept Request", friendship_url(id: friendship.ids), method: :patch %> <li>
    <% elsif !current_user.pending_friends.where(id: @user.id).empty? %>
      <p> request sent, waiting reply <p>
    <% else %>
      <%= link_to "Add Friend", friendships_path(friend_id: @user.id), method: :post %>
    <% end %>
<% end %>


<% if current_user?(@user) %>
<%= form_for @post do |f| %>

<%= render 'shared/error_messages' %>

<div class="form-group">
  <%= f.label "Title" %>
  <%= f.text_field :title, class:"form-control" %>
</div>

<div class="form-group">
  <%= f.file_field :picture, accept: 'image/jpg image/jpeg image/gif image/png' %>
</div>

<div class="form-group">
  <%= f.label "post" %>
  <%= f.text_area(:body, class:"form-control") %>
</div>

<div class="form-group">
  <%= f.submit "Post", class:"btn btn-primary" %>
</div>

<% end %>

<script>
  $('#post_picture').bind('change', function(){
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5){
      alert('Maximum file size is 5mb, please upload a smaller file');
    }

  })
</script>

Your Posts
<% end %>

<% if !@posts.nil? %>
  <% @posts.each do |p| %>
    <%= render partial: "posts/post", locals: {post: p} %>
  <% end %>
<% end %>
